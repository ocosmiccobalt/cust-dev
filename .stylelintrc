{
  "extends": "stylelint-config-htmlacademy",
  "customSyntax": "postcss-scss",
  "ignoreFiles": ["**/normalize.scss"],

  "rules": {
    "declaration-no-important": true,
    "indentation": [2, {
      "ignore": ["inside-parens"]
    }],
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "use",
        "mixin",
        "include",
        "content",
        "each"
      ]
    }],
    "number-max-precision": 3
  }
}
